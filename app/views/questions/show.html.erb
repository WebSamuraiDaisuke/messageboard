<h1>Questions#show</h1>
<h2>Show page</h2>

  <h3><%= @question.title  %></h3>
  <p><%= @question.content %></p>

<hr>
<%= form_with model: [@question, @answer],locale: true do |f| %>
  <%= f.hidden_field :question_id, {value: @question.id} %>
  <label>Name</label>
  <%= f.text_field :name  %>
  <label>Content</label>
  <%= f.text_area :content %>
  <%= f.submit "Reply" %>
<% end %>